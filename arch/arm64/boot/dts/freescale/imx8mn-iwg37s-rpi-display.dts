#include "imx8mn-iwg37s.dts"

&lt_bridge {
	status = "disabled";
};

&lvds_backlight0 {
	status = "disabled";
};

&mipi_dsi {
	panel@0 {
		compatible = "rpi,panelv1";
                reg = <0>;
                dsi-lanes = <1>;
                video-mode = <1>;
                panel-width-mm = <154>;
                panel-height-mm = <86>;
                status = "okay";
        };
};

&i2c3 {
	rpi_panel:rpi_panel@45{ /* MIPI DSI: Raspberry Pi display */
		reg=<0x45>;
		compatible="touch-raspberrypi-i2c3";
		status="okay";
	};

	polytouch: edt-ft5x06@38 { /* Touch: EDT Touch Panel */
		compatible = "edt,edt-ft5406", "edt,edt-ft5x06";
		reg = <0x38>;
		touchscreen-size-y = <480>;
		touchscreen-size-x = <800>;
		poll-interval = <17>;
	};
};
